{
    "name": "dimgui",

    "description": "dimgui is a D port of the imgui OpenGL GUI library",

    "authors": [
        "Mikko Mononen",
        "Adrien Herubel",
        "Andrej Mitrovic"
    ],

    "homepage": "https://github.com/d-gamedev-team/dimgui",

    "copyright": "Copyright (c) 2009-2010 Mikko Mononen memon@inside.org",

    "license": "zlib",

    "targetName": "imgui",

    "targetType": "staticLibrary",

    "targetPath" : "bin",

    "sourcePaths": [
        "src"
    ],

    "subPackages": [
        "examples/demo",
        "examples/memory",
    ],

    "configurations": [
        {
            "name": "library",
            "versions": ["imgui_gl_glad"],
            "dependencies": {
                "glad-drey": ">=0.0.2",
            },
        },
        {
            "name": "derelict-gl-library",
            "versions": ["imgui_gl_derelict"],
            "dependencies": {
                "derelict-gl3":  ">=1.0.4",
            },
        },
    ],
}
